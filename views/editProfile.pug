extends layouts/main

block content
    .form-container
        form(action=routes.editProfile, method="post")
            label(for="avatar") Avatar
            input(tpye="file", id="avatar", name="avatar")
            input(tpye="text", placeholder="Name", name="name")
            input(tpye="email", placeholder="Email", name="email")
            input(type="submit", value="Update Profile")
        a.form-container__link(href=routes.changePassword) Change Password